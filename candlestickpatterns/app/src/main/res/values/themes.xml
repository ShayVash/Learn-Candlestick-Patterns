<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CandlestickPatterns" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#57c478</item>
        <item name="colorSecondaryVariant">#8bf8a8</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#D6D6D6</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <!-- card view -->
        <item name="cardViewStyle">@style/Widget.Custom.CardView</item>

        <item name="alertDialogStyle">@style/Widget.Custom.AlertDialog</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorAccent">#797979</item>

        <item name="bottomNavigationStyle">@style/ThemeOverlay.Custom.BottomNavigationView</item>
        <item name="buttonStyle">@style/Widget.Custom.Button</item>

        <item name="android:spinnerStyle">@style/Widget.Custom.Spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="Theme.CandlestickPatterns.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CandlestickPatterns.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CandlestickPatterns.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Widget.Custom.CardView" parent="CardView.Light">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
    <style name="Widget.Custom.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:backgroundTint">#E5E6E4</item>
        <item name="android:textAlignment">center</item>
        <item name="android:windowNoTitle">true</item>
        <item name="alertDialogCenterButtons">true</item>
    </style>

    <style name="ThemeOverlay.Custom.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/bottom_nav_light</item>
        <item name="itemIconTint">@color/bottom_nav_light</item>
        <item name="itemBackground">@color/colorPrimary</item>
    </style>

    <style name="Widget.Custom.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">#505050</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Widget.Custom.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">#3C3C3C</item>
        <item name="android:background">@drawable/rounded</item>
    </style>
    <style name="SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#3C3C3C</item>
        <item name="android:background">@drawable/rounded</item>
    </style>

</resources>